                        <p class="text-muted">Что-то про еще одну услугу!</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="p-0" id="portfolio">
        <div class="container-fluid">
            <div class="row no-gutter ">
                <!--popup-gallery-->
                @foreach (var category in Model.Categories)
                {
                    <div class="col-lg-4 col-sm-6">
                        <a asp-controller="Product" asp-action="ListForAll"
                           asp-route-category="@category.CategoryId" class="portfolio-box">
                            @if (category.Image != null)
                            {
                                <img class="img-fluid" src="data:image/jpeg;base64,@(Convert.ToBase64String(category.Image))" alt="Категория">
                            }
                            else
                            {
                                <img class="img-fluid" src="../../Images/default.png" alt="Категория">
                            }
                            <div class="portfolio-box-caption">
                                <div class="portfolio-box-caption-content">
                                    <div class="project-name text-faded">
                                        @category.CategoryName <!--change one variable-->
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </section>

