@using System
@model Product

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        @if (Model.Image != null)
        {
            <img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Image))" alt=""/>
        }
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a>@Model.Name</a>
            </h3>
            <p>@Model.ShortDescription</p>
            <p>@Model.Status</p>
            @if (Model.InStock !=0)
            {
                 <h4>СКИДКА Model.InStock %</h4>
            }
        </div>
    </div>
</div>
