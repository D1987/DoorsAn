
  <div class="col-sm-4 col-md-4 col-lg-4">
      <div class="thumbnail">
          <a asp-action="Details" asp-controller="Product" asp-route-id="@Model.ProductId">
              <div class="item-responsive item-4by3">
                  @if (Model.Image != null)
                  {
                      <div class="content" style="background: url(data:image/jpeg;base64,@(Convert.ToBase64String(Model.Image)));">
                          @if (Model.InStock != 0)
                          {
                            <div class="discount">-@Model.InStock%</div>
                          }
                      </div>
                  }
                  else
                  {
                      <div class="content" style="background: url(../../Images/default.png);">
                          @if (Model.InStock != 0)
                          {
                              <div class="discount">-@Model.InStock%</div>
                          }
                      </div>
                  }
              </div>
            <div class="caption">   
                <p class="pull-right">@Model.Price.ToString("c")</p>
                <h3>@Model.Name</h3>             
                
                @if (Model.Status.Equals(true))
                {
                    <p>В наличии</p>
                }else
                {
                    <p>В наличии нет</p>
                }               
            </div>
          </a>
      </div>
</div>

