@using System
@model Product

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        @if (Model.Image != null)
        {
            <img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Image))" alt=""/>
        }
        else
        {
            <img class="slide-image" src="~/Images/default.png" alt="">
        }
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a asp-action="Details" asp-controller="Product" asp-route-id="@Model.ProductId">@Model.Name</a>
            </h3>
            <p>@Model.ShortDescription</p>
            <p>@if (Model.Status.Equals(true))
                {<p>В наличии</p>}
                else
                {<p>В наличии нет</p> }
            </p>           
            @if (Model.InStock !=0)
            {
                 <h4>СКИДКА @Model.InStock%</h4>
            }
        </div>
    </div>
</div>
