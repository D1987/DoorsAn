<li class="dropdown">
    <a asp-controller="Product"
       asp-action="List"
       class="dropdown-toggle" data-toggle="dropdown">Товары<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var category in Model)
        {
            <li>
                <a asp-controller="Product" asp-action="ListForAll"
                   asp-route-category="@category.CategoryId">@category.CategoryName</a>
            </li>
        }
        <li class="divider"></li>
        <li>
            <a asp-controller="Product" asp-action="ListForAll" asp-route-category="">Все категории</a>
        </li>
    </ul>
</li>