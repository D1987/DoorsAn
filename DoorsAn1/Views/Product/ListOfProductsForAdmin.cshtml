@using Microsoft.AspNetCore.Mvc.Rendering
@model ProductListViewModel
@{
    ViewBag.Title = "Список товаров";
}

@if (User.Identity.IsAuthenticated)
{
    <a class="btn btn-primary" asp-action="Create">Добавить товар</a>
}

<form method="get">
    <div class="form-inline form-group">
        <label class="control-label">Имя: </label>
        @Html.TextBox("name", Model.FilterViewModel.SelectedName, htmlAttributes: new { @class = "form-control" })

        <label class="control-label">Категория: </label>
        @Html.DropDownList("category", Model.FilterViewModel.Categories as SelectList,
                htmlAttributes: new { @class = "form-control" })

        <input type="submit" value="Фильтр" class="btn btn-default" />
    </div>
</form>

<table class="table table-striped">
    <thead>
    <tr>
        <th>
            <a asp-action="ListOfProductsForAdmin"
               asp-route-sortOrder="@(Model.SortViewModel.NameSort)"
               asp-route-name="@(Model.FilterViewModel.SelectedName)"
               asp-route-category="@(Model.FilterViewModel.SelectedCategory)">
                Название
            </a>
        </th>
        <th>
            <a asp-action="ListOfProductsForAdmin"
               asp-route-sortOrder="@(Model.SortViewModel.CategorySort)"
               asp-route-name="@(Model.FilterViewModel.SelectedName)"
               asp-route-category="@(Model.FilterViewModel.SelectedCategory)">
                Категория
            </a>
        </th>
        <th>
            <a asp-action="ListOfProductsForAdmin"
               asp-route-sortOrder="@(Model.SortViewModel.StatusSort)"
               asp-route-name="@(Model.FilterViewModel.SelectedName)"
               asp-route-category="@(Model.FilterViewModel.SelectedCategory)">
                Статус
            </a>
        </th>
    </tr>
    </thead>
    @foreach (var item in Model.Products)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Category.CategoryName</td>
            <td>@if (item.Status.Equals(true))
                {
                    <p>В наличии</p>
                }
                else
                {<p>В наличии нет</p>
                }</td>
            <td>
                <a class="btn btn-info btn-xs" asp-action="Details" asp-controller="Product" asp-route-id="@item.ProductId">Подробнее</a>               
                <a class="btn btn-primary btn-xs" asp-action="Edit" asp-controller="Product" asp-route-id="@item.ProductId">Изменить</a>
                <a class="btn btn-danger btn-xs" asp-action="Delete" asp-controller="Product" asp-route-id="@item.ProductId">Удалить</a>
              
            </td>
        </tr>
    }
</table>
@if (Model.PageViewModel.HasPreviousPage)
{
    <a asp-action="ListOfProductsForAdmin"
       asp-route-page="@(Model.PageViewModel.PageNumber - 1)"
       asp-route-name="@(Model.FilterViewModel.SelectedName)"
       asp-route-category="@(Model.FilterViewModel.SelectedCategory)"
       asp-route-sortorder="@(Model.SortViewModel.Current)"
       class="btn btn-secondary">
        <i class="glyphicon glyphicon-chevron-left"></i>
        Назад
    </a>
}
@if (Model.PageViewModel.HasNextPage)
{
    <a asp-action="ListOfProductsForAdmin"
       asp-route-page="@(Model.PageViewModel.PageNumber + 1)"
       asp-route-name="@(Model.FilterViewModel.SelectedName)"
       asp-route-category="@(Model.FilterViewModel.SelectedCategory)"
       asp-route-sortorder="@(Model.SortViewModel.Current)"
       class="btn btn-secondary">
        Вперед
        <i class="glyphicon glyphicon-chevron-right"></i>
    </a>
}
