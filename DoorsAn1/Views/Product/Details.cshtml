@using System
@using DoorsAn1.ViewModels
@model ProductListViewModel
@{
    Layout = "_LayoutProducts";
    ViewBag.Title = @Model.Product.Name;
}
<h2>Товар @Model.Product.Name</h2>
<div>
    <dl class="dl-horizontal">
        <dt>Категория</dt>
        <dd>@Model.Category.CategoryName</dd>
        <dt>Производитель</dt>        
        <dd>@Model.Product.Producer</dd>
        <dt>Цена</dt>
        <dd>@Model.Product.Price.ToString("c")</dd>
        <dt>Товар на акции</dt>
        <dd>Скидка @Model.Product.InStock%</dd>
        <dt>Описание</dt>
        <dd>@Model.Product.LongDescription</dd>
        <dt>Статус</dt>
        <dd>@if (Model.Product.Status.Equals(true)) {
                <p>В наличии</p>
            } else {<p>В наличии нет</p> }</dd>
    </dl>
</div>
<div>

    @if (Model.Product.Image != null)
    {
        <img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Product.Image))" />
    }
</div>