@model LoginViewModel

@{
    Layout = "_LayoutProducts";
}

<div class="row loginForm">
    <div class="col-md-8 col-md-offset-2">
        <h2>Введите логин и пароль</h2>
        <form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl"
              method="post" class="form-horizontal">            
            <hr />
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="form-group">                
                <div class="col-md-10">
                    <input asp-for="UserName" class="form-control" placeholder="Логин"/>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">                
                <div class="col-md-10">
                    <input asp-for="Password" class="form-control" placeholder="Пароль"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            @Html.ValidationMessage("CustomError", new {@class= "text-danger" })                   
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" class="btn btn-success" value="Войти" />
                </div>
            </div>            
        </form>
        
    </div>
</div>

